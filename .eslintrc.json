{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "project": "voice-mcp/tsconfig.json",
    "tsconfigRootDir": "/Users/saharcarmel/Code/personal/VoiceMCP"
  },
  "plugins": ["@typescript-eslint", "import"],
  "rules": {
    "import/no-unresolved": "error",
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/no-explicit-any": "off"
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": "voice-mcp/tsconfig.json"
      },
      "alias": {
        "map": [
          ["@", "./voice-mcp/src"],
          ["@services", "./voice-mcp/src/shared/services"]
        ],
        "extensions": [".ts", ".tsx", ".js", ".jsx", ".json"]
      }
    }
  }
}
