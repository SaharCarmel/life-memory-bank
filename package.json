{
  "name": "voice-mcp",
  "productName": "VoiceMCP",
  "version": "1.0.0",
  "description": "A macOS desktop application for recording voice memos with automatic transcription using Whisper AI and MCP integration",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "debug": "electron-forge start -- --remote-debugging-port=9222",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "jest",
    "generate-assets": "node scripts/generate-assets.cjs",
    "prebuild": "npm run generate-assets"
  },
  "keywords": [
    "electron",
    "voice-recording",
    "whisper-ai",
    "transcription",
    "mcp",
    "typescript",
    "macos"
  ],
  "author": {
    "name": "saharcarmel",
    "email": "saharsela271@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/plugin-webpack": "^7.8.1",
    "@electron/asar": "^4.0.0",
    "@electron/fuses": "^1.8.0",
    "@types/jest": "^29.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "css-loader": "^6.11.0",
    "electron": "^28.0.0",
    "electron-debug-mcp": "github:amafjarkasi/electron-mcp-server",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^4.3.5",
    "eslint-plugin-import": "^2.31.0",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "icon-gen": "^5.0.0",
    "jest": "^29.0.0",
    "node-loader": "^2.1.0",
    "sharp": "^0.34.1",
    "style-loader": "^3.3.4",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "~4.5.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite3": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
