{
  "compilerOptions": {
    "target": "ES2021",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["src/*"],
      "@services/*": ["src/shared/services/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/declarations.d.ts"
    ],
    "types": ["electron", "node"]
  },
  "include": ["src/**/*", "webpack.*.ts"],
  "exclude": ["node_modules", "dist"]
}
